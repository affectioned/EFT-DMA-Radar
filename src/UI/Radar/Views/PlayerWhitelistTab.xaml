<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.PlayerWhitelistTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:PlayerWhitelistViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Whitelist Count: " FontWeight="Bold"/>
            <TextBlock Text="{Binding WhitelistCount}" FontWeight="Bold"/>
            <TextBlock Text=" players" Margin="5,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding WhitelistItems}"
                  SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Account ID"
                                    Binding="{Binding AcctID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="150" />
                <DataGridTextColumn Header="Custom Name"
                                    Binding="{Binding CustomName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200" />
                <DataGridTextColumn Header="Timestamp"
                                    Binding="{Binding Timestamp, StringFormat={}{0:g}}"
                                    IsReadOnly="True"
                                    Width="150" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>